# Supplementary content for uicomponent-shortform snippet
# Provides program and functions that affect UI components

# Program entry point
UIExampleApp -> UIFile v1.0.0

# File that manages UI interactions
UIFile @ src/ui-manager.ts:
  <- [LoginDto, AuthToken, ProfileDto, User]
  -> [login, logout, updateUserProfile, deleteUser, initializeApp, App]

# Function that initializes the app UI
initializeApp :: () => void
  "Initializes the application UI"
  ~ [App]

# Functions that affect UI components (referenced in comments)
login :: (credentials: LoginDto) => AuthToken
  "Authenticates user"
  ~ [Header]

logout :: () => void
  "Logs out user"
  ~ [Header]

updateUserProfile :: (data: ProfileDto) => User
  "Updates user profile"
  ~ [UserProfile]

deleteUser :: (id: string) => void
  "Deletes user account"
  ~ [UserProfile]

# Required DTOs
LoginDto % "Login credentials"
  - email: string "User email"
  - password: string "User password"

AuthToken % "Authentication token"
  - token: string "JWT token"

ProfileDto % "Profile update data"
  - name: string "User name"

User % "User entity"
  - id: string "User ID"
  - name: string "User name"

# Missing UI components referenced in containment
Logo & "Application logo"
  < [Header]

Navigation & "Navigation menu"
  < [Header]

UserMenu & "User menu dropdown"
  < [Header]

Footer & "Application footer"
  < [App]

Sidebar & "Sidebar component"
  < [MainContent]

ContentArea & "Content area"
  < [MainContent]
  > [UserProfile]# Shortform syntax is for LLMs
App &! "Main application component"
  > [Header, MainContent, Footer]

# Child components
Header & "Application header"
  < [App]
  > [Logo, Navigation, UserMenu]
  # Components affected by: [login, logout]

MainContent & "Main content area"
  < [App]
  > [Sidebar, ContentArea]

# Component affected by functions
UserProfile & "User profile display"
  < [ContentArea]
  # Components affected by: [updateUserProfile, deleteUser]