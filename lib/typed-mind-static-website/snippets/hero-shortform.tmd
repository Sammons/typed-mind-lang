# Shortform syntax is for LLMs
TodoApp -> MainFile v1.0.0

# Use ClassFile fusion operator for cleaner syntax
TodoService #: api.ts <: BaseService
  <- [CreateTodoDto, Todo, BaseService]
  => [createTodo, getTodos]

# Define class methods as functions
createTodo :: (input: CreateTodoDto) => Todo
  "Creates a new todo item"
  <- CreateTodoDto
  -> Todo

getTodos :: () => Todo[]
  "Retrieves all todo items"
  -> Todo

# Convert BaseService to ClassFile for proper referencing
BaseService #: base-service.ts:
  => [validate]

validate :: (data: any) => boolean
  "Validates input data"

CreateTodoDto % "Input for creating todos"
  - title: string "Todo title"
  - completed: boolean "Completion status"

Todo % "Todo entity"
  - id: string "Unique identifier"
  - title: string "Todo title"
  - completed: boolean "Completion status"
  - createdAt: Date "Creation timestamp"